<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<heroInputConfigFile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" playerID="-1" xsi:schemaLocation="http://www.w3.org/2001/XMLSchema-instance">
    <map>
        <entry>
            <key>LEFT</key>
            <value>
                <handlers xsi:type="joystickAxisInput">
                    <axis>X</axis>
                    <axisSignal>NEGATIVE</axisSignal>
                </handlers>
                <handlers xsi:type="joystickAxisInput">
                    <axis>POV_Y</axis>
                    <axisSignal>NEGATIVE</axisSignal>
                </handlers>
            </value>
        </entry>
        <entry>
            <key>RIGHT</key>
            <value>
                <handlers xsi:type="joystickAxisInput">
                    <axis>X</axis>
                    <axisSignal>POSITIVE</axisSignal>
                </handlers>
                <handlers xsi:type="joystickAxisInput">
                    <axis>POV_Y</axis>
                    <axisSignal>POSITIVE</axisSignal>
                </handlers>
            </value>
        </entry>
        <entry>
            <key>UP</key>
            <value>
                <handlers xsi:type="joystickAxisInput">
                    <axis>Y</axis>
                    <axisSignal>NEGATIVE</axisSignal>
                </handlers>
                <handlers xsi:type="joystickAxisInput">
                    <axis>POV_X</axis>
                    <axisSignal>POSITIVE</axisSignal>
                </handlers>
            </value>
        </entry>
        <entry>
            <key>DOWN</key>
            <value>
                <handlers xsi:type="joystickAxisInput">
                    <axis>Y</axis>
                    <axisSignal>POSITIVE</axisSignal>
                </handlers>
                <handlers xsi:type="joystickAxisInput">
                    <axis>POV_X</axis>
                    <axisSignal>NEGATIVE</axisSignal>
                </handlers>
            </value>
        </entry>
        <entry>
            <key>JUMP</key>
            <value>
                <handlers xsi:type="joystickButtonInput">
                    <joystickButtonCode>0</joystickButtonCode>
                </handlers>
            </value>
        </entry>
        <entry>
            <key>SHOOT</key>
            <value>
                <handlers xsi:type="joystickButtonInput">
                    <joystickButtonCode>5</joystickButtonCode>
                </handlers>
            </value>
        </entry>
        <entry>
            <key>SLIDE</key>
            <value>
                <handlers xsi:type="joystickButtonInput">
                    <joystickButtonCode>1</joystickButtonCode>
                </handlers>
            </value>
        </entry>
        <entry>
            <key>ACTION</key>
            <value>
                <handlers xsi:type="joystickButtonInput">
                    <joystickButtonCode>3</joystickButtonCode>
                </handlers>
            </value>
        </entry>
    </map>
</heroInputConfigFile>
